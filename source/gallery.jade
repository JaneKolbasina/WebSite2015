mixin photo(title, path)
    div.card.light-blue.lighten-1
        div.card-content
            span.card-title
                =title
            a.fancybox(rel="group", href=path)
                img(width="100%", src=path, alt=title)

extends _layout
block title
    title Галерея

block content
    h1 Галерея
    div.row
        +photo("Eвгения", "photos/avatar.jpg")
        +photo("Eвгения", "photos/jane_1.jpg")
        +photo("Eвгения", "photos/jane_2.jpg")